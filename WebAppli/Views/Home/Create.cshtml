@model LogicaDeNegocio.Entidades.MovimientoDeStockDto

@{
    ViewData["Title"] = "Nuevo Movimiento de Stock";
}
@if (@ViewBag.Mensaje != null)
{
    <div class="alert alert-danger" role="alert">
        <p>@ViewBag.Mensaje</p>
    </div>
}
<h1>Ingresar</h1>

<h4>Movimiento de stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden=true>
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fecha" class="control-label"></label>
                <input asp-for="fecha" class="form-control" disabled value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="articuloId" class="control-label"></label>
                <input asp-for="articuloId" class="form-control" />
                <span asp-validation-for="articuloId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipoId" class="control-label"></label>
                <input asp-for="tipoId" class="form-control" />
                <span asp-validation-for="tipoId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ejecutorEmail" class="control-label"></label>
                <input asp-for="ejecutorEmail" class="form-control" value=@ViewBag.Mail />
                <span asp-validation-for="ejecutorEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cantidad" class="control-label"></label>
                <input asp-for="cantidad" class="form-control" />
                <span asp-validation-for="cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
